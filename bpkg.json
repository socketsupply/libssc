{
  "name": "libopc",
  "repo": "socketsupply/libopc",
  "version": "0.0.0",
  "license": "MIT",
  "description": "Operator Framework client library written in C99.",
  "commands": {
    "update-manifests": "./scripts/update-manifest-files.sh",
    "print-version": "./scripts/version.sh",
    "shellcheck": "command shellcheck scripts/*.sh",
    "format": "clang-format -i include/**/*.h src/*.c tests/*.c example/**/*.c",
    "indent": "indent -t2 -kr -nut src/**/*.c include/**/*.h",
    "lint": "cpplint  include/**/*.h src/**/*.c"
  },
  "files": [
    "include/opc/buffer.h",
    "include/opc/callsite.h",
    "include/opc/error.h",
    "include/opc/init.h",
    "include/opc/ipc.h",
    "include/opc/log.h",
    "include/opc/loop.h",
    "include/opc/math.h",
    "include/opc/opc.h",
    "include/opc/platform.h",
    "include/opc/pool.h",
    "include/opc/pp.h",
    "include/opc/print.h",
    "include/opc/result.h",
    "include/opc/string.h",
    "include/opc/test.h",
    "include/opc/uri.h",
    "include/opc/utf8.h",
    "src/buffer.c",
    "src/error.c",
    "src/init.c",
    "src/ipc.c",
    "src/log.c",
    "src/math.c",
    "src/pool.c",
    "src/result.c",
    "src/string.c",
    "src/system.c",
    "src/uri.c",
    "src/utf8.c"
  ],
  "scripts": [
    "scripts/build.sh",
    "scripts/version.sh"
  ],
  "dependencies": {
    "jwerle/brief.mk": "0.1.0"
  }
}
